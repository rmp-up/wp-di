{
  "name": "rmp-up/wp-di",
  "license": "proprietary",
  "description": "Simple Dependency Injection / Service Container for more OOP in WordPress (PSR-11 compatible)",
  "autoload": {
    "files": [
      "preload.php"
    ],
    "psr-4": {
      "RmpUp\\WpDi\\": "lib"
    }
  },
  "require": {
    "composer/package-versions-deprecated": "1.*",
    "pimple/pimple": "^3.0"
  },
  "autoload-dev": {
    "psr-4": {
      "RmpUp\\WpDi\\Test\\": "opt/doc"
    }
  },
  "require-dev": {
    "php": ">=7.0",
    "johnpbloch/wordpress": "5.2.*",
    "perftools/php-profiler": "0.12.*",
    "php-coveralls/php-coveralls": "1.1.*",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpstan/phpstan": "0.12.*",
    "phpunit/phpunit": "7.5.*|8.2.*|6.5.*",
    "pretzlaw/wp-integration-test": "0.3.*",
    "rmp-up/doc-parser": "0.1.*",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "3.5.*",
    "wp-cli/config-command": "2.0.*",
    "wp-cli/core-command": "2.0.*",
    "wp-cli/wp-cli": "2.4.*"
  },
  "suggest": {
    "symfony/yaml": "To maintain services the most common way"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "wordpress-install-dir": "srv"
  },
  "scripts": {
    "post-install-cmd": [
      "test -h srv/wp-content/plugins/wp-di || ln -sr opt/wp-di srv/wp-content/plugins/"
    ],
    "post-update-cmd": [
      "test -h srv/wp-content/plugins/wp-di || ln -sr opt/wp-di srv/wp-content/plugins/"
    ]
  }
}
